<div class="last-projects-wrapper">
	<div class="container">
			<div class="col-md-9">
			<div class="box box-primary">
				<div class="box-body">
				<% @last_projects.each do |project|  %>

					<div class="project-content">
					<!-- Title -->
					<h2 class="project-title">
						<%= link_to "#{project.title}" , project_show_path(project)  %>
					</h2>

					<!-- Post meta -->
					<div class="project-meta">

						<span class="meta-date">
							<span class="meta-icon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
							<span><%= project.created_at.strftime("%d/%m/%Y") %></span>
						</span>

						<span class="meta-offre">
							<!-- <span class="meta-icon"><i class="fa fa-bullhorn" aria-hidden="true"></i></span>
							<span></span> -->
						</span>

						<span class="meta-budget">
							<span class="meta-icon"><i class="fa fa-money" aria-hidden="true"></i></span>
							<span>
								
							<%= number_with_precision(project.budget, delimiter: " ", separator: "", precision: 0) %>	
							</span>
						</span>

						<span class="meta-user">
							<span class="meta-icon"><i class="fa fa-user" aria-hidden="true"></i></span>
							<span><%= project_user(project.user_id) %></span>
						</span>


						<span class="meta-statut">
							<span class="statut-ouvert"></span>
						</span>

						<span class="meta-priorite">
							<span class=""></span>	
						</span>


					</div>
					<!-- end post meta -->

					<!-- Description -->
					<div class="post-description">
						<%= project.content.truncate_words(50, omission: '...').html_safe %>
					</div>
					<div class="post-competences">
						
					</div>
		
					<%= do_separator(project, @last_projects) %>


</div>
				<% end %>

				<div class="row page-navi">
					<%= will_paginate @last_projects, previous_label: "Précédent",next_label: "Suivant",  renderer: BootstrapPagination::Rails %>
						
				</div>
					
				</div>
				</div>
	</div>
	</div>
</div>