<%= form_with(model: project, local: true) do |form| %>

	<% if project.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

			<ul>
				<% project.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
		<%= form.label :title %>
		<%= form.text_field :title, id: :project_title, class: "form-control", placeholder: "Titre", required: true %>
	</div>

	<div class="form-group">
		<%= form.label :content %>
		<%= form.text_area :content, id: :project_content, rows: "6", class: "form-control", placeholder: "Description", required: true %>
	</div>


	<div class="form-group">
		<%= form.label t(:category_id) %>
		<%= form.collection_select :category_id, @all_categories,  :id, :title , {prompt: "select"} , class: "form-control" %>
	</div>
 
	<div class="row">
		<div class="col-md-8">
			<div class="form-group">
				<%= form.label t("budget") %>
				<%= form.number_field :budget, id: :project_budget, class: "form-control", required: true %>
										
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
					<%= form.label t("currency_id") %>
					<%= form.collection_select :currency_id, @currency, :id, :iso_code, {prompt: t("currency_id")}, class: "form-control", required: true %>
											
			</div>
		</div>
	</div>

	<!-- Start row -->
	<div class="row">
		<div class="col-md-8">
			<div class="form-group">
					<%= form.label t("time_limit") %>
					<%= form.text_field :time_limit, id: :project_time_limit, class: "form-control", required: true %>
							
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
					<%= form.label t("time_unity_id") %>
					<%= form.collection_select :time_unity_id, @time_unity, :id, :title, {prompt: t("time_unity_id")}, class: "form-control" , required: true %>
											
			</div>
		</div>
	</div><!-- end row -->

	<div class="form-group">
			<%= form.label t(:expire_at) %>
			<%= form.date_field :expire_at, id: :project_expire_at, class: "form-control", required: true %>
	</div>
	
	<!-- Nested field -->
	<div class="form-group">
		<%= fields_for(@project_skill) do |ps| %>
				<%= ps.label "All skills" %>
				<%= collection_select(:skills, :id,  @all_skills, :id, :title, {selected: @selected_skills.map(&:skill_id) }, {multiple: true, class: "chosen-select"}) %>
		<% end %>
	</div><!-- end nested -->

	<div class="form-group">
		<%= form.button "PUBLIER", class: "btn btn-primary pull-right", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> PUBLIGATION..."} %>
	</div>
<% end %>
