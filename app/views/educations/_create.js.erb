$("ul.errors").html("");
<% if @education.errors.any? %>
  <% @education.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".educations-index").html("<%= escape_javascript(render 'index') %>");
  $("#educations-modal").modal("hide");
<% end %>