<%= form_with(model: education, local: false, remote: true) do |form| %>
  <div class="modal-body">
  
    <div class="row">
        <div class="col-xs-2">
            <div class="form-group">
                <%= form.label t(:start_date) %><br />
                <%= form.date_select(:start_date, {:discard_day => true, :discard_month => true, :start_year => 1900}, class: "date_select") %>
              </div>
        </div>
        <div class="col-xs-2">
            <div class="form-group">
                   <%= form.label t(:end_date) %><br />
                <%= form.date_select(:end_date, {:discard_day => true, :discard_month => true, :start_year => 1900}, class: "date_select") %>
              </div>
          </div>
    </div>

 
  <div class="form-group">
    <%= form.label t(:degree) %>
    <%= form.text_field :degree, id: :education_degree, class: "form-control", placeholder: t(:degree) %>
  </div>

  <div class="form-group">
    <%= form.label t(:school) %>
    <%= form.text_field :school, id: :education_school, class: "form-control", placeholder: t(:school) %>
  </div>

  <div class="form-group">
    <%= form.label t(:country) %>
    <%= form.text_field :country, id: :education_school, class: "form-control", placeholder: t(:country) %>
  </div>

  </div>

  <div class="modal-footer">

    <div class="form-group">
      <%= form.button cu_action_label(form), data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Encours..."}, class: "btn btn-primary pull-right" %>
    </div>
  </div>
<% end %>
