<!-- Profile  header -->
<div class="profile_header">
	<!-- Profile cover -->
	<div class="profile_cover">
		<div class="container">
			<div class="profile_wrapper">

				<div class="row">
					<!-- User thumb -->
					<div class="col-md-4">
						<div class="user_thumb clearfix">
							<%= image_tag @freelance.avatar.url(:medium) %>
							<div class="change_thumb">
								<span><i class="fa fa-camera" aria-hidden="true"></i></span>
								<span><%= link_to "Modifier votre photo", root_path %></span>
							</div>
						</div><!-- end thumb -->	
					</div><!-- end col -->

					<!-- User description -->
					<div class="col-md-8">
						
						<div class="freelance_details">
						
							<div class="freelance_name">
								<%= @freelance.user_name  %>
							</div>
							<div class="freelance_meta">
								<span class="freelance_location">
									<%= user_contacts_city(@freelance.id) %>, 
									<%= user_contacts_country(@freelance.id) %>
								</span>
								<span class="freelance_member_since">
									- Membre depuis: <%= @freelance.created_at.strftime("%d/%m/%Y") %>
								</span>
							</div>
						</div>
					</div><!-- end -->
				</div>
			</div>
		</div><!-- end col -->
	</div><!-- end row-->
</div><!-- end header -->


		
<div class="profile_content">
	<div class="container">
		<!-- Profile content -->
		<div class="row">
			
			<div class="col-md-4">
					<!-- Sidebar -->
			<div class="sidebar">

			<div class="box box-primary">
				<div class="box-header with-border">
					<h4 class=box-title>
						Suivez-moi
						
					</h4>
				</div>
				<div class="box-body">
					<div class="social-links">
					 
	                <a class="btn btn-social-icon btn-facebook"><i class="fa fa-facebook"></i></a>
	                <a class="btn btn-social-icon btn-google"><i class="fa fa-google-plus"></i></a>
	                <a class="btn btn-social-icon btn-linkedin"><i class="fa fa-linkedin"></i></a>
	                <a class="btn btn-social-icon btn-twitter"><i class="fa fa-twitter"></i></a>

				</div>
				</div>
			</div>



					
				</div>
			</div><!-- end sidebar -->

			<!-- content -->
			<div class="col-md-8">

				<div class="resume">
					<%= render("resume") %>
				</div>
			</div>



			
		</div><!-- end profile content -->

		<!-- Profile footer -->
		<div class="profile_footer">
			
		</div><!-- end -->

	</div><!-- end -->

	
</div>
</div>


	
