<div class="dashboard-wrapper">
	<div class="container">
		<div class="col-md-8">
			<% if @freelances.empty? %>
				<div class="box box-primary">
					<div class="box-body">
						<p>
							Pas de freelances pour cette recheche!
						</p>
					</div>
				</div>

			<% else %>
				<% @freelances.each do |freelance|  %>
					<div class="box box-primary">
						<div class="box-body">
							

								<div class="freelances_content">
									
									<div class="col-md-4">
										<div class="freelance_thumbnail">
											<%= image_tag freelance.avatar.url(:medium) %>
										</div>
									</div>
									<div class="col-md-8">
										<div class="freelance_name">
											<%= link_to "#{freelance.user_name}" , show_profile_path(freelance) %>
										</div>
										<div class="freelance_meta">
											<span class="freelance_location">
												<%= user_contacts_city(freelance.id) %>, 
												<%= user_contacts_country(freelance.id) %>
											</span>
											<span class="freelance_member_since">
												- Membre depuis: <%= freelance.created_at.strftime("%d/%m/%Y") %>
											</span>
										</div>

										<div class="freelance_short_presentation">
											<%= user_details_presentation(freelance.id).truncate_words(30, omission: '...').html_safe %>
										</div>
										<div class="freelance_skills">
											
										</div>

									</div>



								</div>
							
							
						</div><!-- end box-body -->
					</div><!-- end box-primary -->
				<% end %>
			<% end %>

			<div class="row page_navi">
						<%= will_paginate @freelances, previous_label: "Précédent",next_label: "Suivant",  renderer: BootstrapPagination::Rails %>
							
					</div>
		</div>

		<!-- Sidebar -->
		<div class="col-md-4">
			<%= render("./dashboard/shared/sidebar") %>

			

			


			
		</div>
	</div>
</div>