$("ul.errors").html("");
<% if @bid.errors.any? %>
  <% @bid.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".bids_index").html("<%= escape_javascript(render 'index') %>");
  $("#bid_modal").modal("hide");
 
<% end %>