<div class="dashboard-wrapper">
	<div class="container">
		<div class="col-md-8">
			<% if @freelances.empty? %>
				<div class="box box-primary">
					<div class="box-body">
						<p>
							Pas de freelances pour cette recheche!
						</p>
					</div>
				</div>

			<% else %>
				<% @freelances.each do |freelance|  %>
					<div class="box box-primary">
						<div class="box-body">
							

								<div class="freelances_content">
									
									<div class="col-md-4">
										<div class="freelance_thumbnail">
											<%= image_tag freelance.avatar.url(:medium) %>
										</div>
									</div>
									<div class="col-md-8">
										<div class="freelance_name">
											<%= link_to "#{freelance.user_name}" , resume_path(freelance) %>
										</div>
										<div class="freelance_meta">
											<span class="freelance_location">
												<%= user_contacts_city(freelance.id) %>, 
												<%= user_contacts_country(freelance.id) %>
											</span>
											<span class="freelance_member_since">
												- Membre depuis: <%= freelance.created_at.strftime("%d/%m/%Y") %>
											</span>
										</div>

										<div class="freelance_short_presentation">
											<%= user_details_presentation(freelance.id).truncate_words(30, omission: '...').html_safe %>
										</div>
										<div class="freelance_skills">
											
										</div>

									</div>



								</div>
							
							
						</div><!-- end box-body -->
					</div><!-- end box-primary -->
				<% end %>
			<% end %>

			<div class="row page_navi">
						<%= will_paginate @freelances, previous_label: "Précédent",next_label: "Suivant",  renderer: BootstrapPagination::Rails %>
							
					</div>
		</div>

		<!-- Sidebar -->
		<div class="col-md-4">
			<div class="box box-primary">
					<div class="box-body">
						<div class="side-widget">
							<div class="widget-button text-center">
								<%= link_to "POSTER UN PROJET", new_project_path, class: "btn btn-warning btn-block" %>
							</div>
						</div>
					</div>
				</div>
			<div class="box box-primary">
				<div class="box-body">
					<div class="side-widget">
						<div class="col-xs-5">
						<div class="user-thumb">
							<%= image_tag current_user.avatar.url(:medium) %>
						</div>
						</div>
						<div class="col-xs-7">
							<div class="user-info">
								<span class="user-login"><%= current_user.login %></span>
								<span class="user-email"><%= current_user.email %></span>
			
							</div>
							<div class="widget-button">
								<%= link_to "MON COMPTE", account_path, class: "btn btn-primary" %>
							</div>
						</div>
					</div>
				</div>
			</div>

			

			


			
		</div>
	</div>
</div>