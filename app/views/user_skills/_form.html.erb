<%= form_with(model: user_skill, local: true) do |form| %>
<div class="modal-body">
  <div class="form-group">
      <%= form.label :skill_id %>
      <%= form.collection_select :skill_id,   @skills,  :id, :title , {prompt: "select"}, class: "form-control " %>
    </div>
    <div class="form-group">
      <%= form.label :grade %>
      <%= form.text_field :grade, id: :user_skill_grade , class: "form-control" %>
    </div>
</div>
<div class="modal-footer">
    <div class="form-group">
      <%= form.submit cu_action_label(form), class: "btn btn-primary pull-right" %>
    </div>
</div>
<% end %>
