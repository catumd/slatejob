$("ul.errors").html("");
<% if @experience.errors.any? %>
  <% @experience.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"));
  <% end %>
<% else %>
  $(".experiences_index").html("<%= escape_javascript(render 'index') %>");
  $("#experiences_modal").modal("hide");
<% end %>