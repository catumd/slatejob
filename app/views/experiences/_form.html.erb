

<%= form_with(model: experience, local: false, remote: true) do |form| %>
  <div class="modal-body">
  
   

      <ul class="errorss">
     
      </ul>
    
 
  
  <div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label t(:start_date) %><br />
      <%= form.date_select(:start_date, {:discard_day => true, :start_year => 1900}, {:class => "date_select"}) %>
    </div>
    </div>
    <div class="col-md-6">
    <div class="form-group">
      <%= form.label t(:end_date) %><br />
      <%= form.date_select(:end_date, {:discard_day => true, :start_year => 1900}, {:class => "date_select"}) %>
    </div>
    </div>
</div>
  <div class="form-group">
    <%= form.label t(:company) %>
    <%= form.text_field :company, id: :experience_company, class: "form-control", placeholder: t(:company) , required: true %>
  </div>
   <div class="form-group">
    <%= form.label t(:position) %>
    <%= form.text_field :position, id: :experience_position, class: "form-control", placeholder: t(:position), required: true %>
  </div>
  <div class="form-group">
    <%= form.label t(:country) %>
    <%= form.text_field :country, id: :experience_country, class: "form-control", placeholder: t(:country), required: true %>
  </div>

  <div class="form-group">
    <%= form.label t(:tasks) %>
    <%= form.text_area :task, row: 5, id: :experience_task, class: "form-control", placeholder: t(:tasks), required: true %>
  </div>

  <div class="form-group">
    <%= form.check_box :currently_working %>
    <%= form.label t(:currently_working) %>
  </div>

</div>
<div class="modal-footer">
  <div class="form-group">
    <%= form.button cu_action_label(form), data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Encours..."}, class: "btn btn-primary pull-right" %>
  </div>
<% end %>
</div>